#!/usr/bin/env sh
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               on
yabai -m config window_opacity               on
yabai -m config window_opacity_duration      0.0
yabai -m config window_shadow                off
yabai -m config insert_feedback_color        0xaad75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.9
yabai -m config split_ratio                  0.618
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               ctrl
yabai -m config mouse_action2                move
yabai -m config mouse_action1                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  10
yabai -m config bottom_padding               06
yabai -m config left_padding                 10
yabai -m config right_padding                10
yabai -m config window_gap                   06

# rule for org-capture
yabai -m rule --add app=Emacs manage=off
# yabai -m rule --add app="Emacs" title="CAPTURE*" space=^5
# yabai -m rule --add app="Emacs" title="emacs-capture" manage=on space=^5 grid=4:4:1:1:2:2
# yabai -m rule --add window --focus 
# yabai -m rule --add window app=Emacs title="^CAPTURE*" --focus app=Emacs title="^CAPTURE*"
# yabai -m rule --add app=Chrome space=5 native-fullscreen=true
# yabai -m rule --add app="Microsoft Teams" space=7 native-fullscreen=true
# yabai -m rule --add app=Emacs space=4 native-fullscreen=true
# yabai -m rule --add app=iTerm2 space=3 native-fullscreen=true
yabai -m rule --add app="^Системные настройки$" manage=off
yabai -m rule --add app=Finder manage=off
echo "yabai configuration loaded.."
